  <ItemGroup>
    <PackageReference Include="System.Collections.Immutable" Version="[$(System_Collections_Immutable_Version)]" />
    <PackageReference Include="System.Memory" Version="[$(System_Memory_Version)]" />
  </ItemGroup>

</Project>
